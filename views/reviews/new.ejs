<%- include("../partials/header.ejs") %>

<br><br>
<div class="container">
<h1>Write a Review</h1><br>
<form action="/<%= product._id %>/reviews" method="POST">

<div class="mb-3">
    <label class="form-label">Name</label>
    <input type="text" class="form-control" name="review[author]" placeholder="Your name">
  </div>

<div class="mb-3">
    <label class="form-label">Review</label>
    <input type="text" class="form-control" name="review[text]" placeholder="Your review">
  </div>

<button type="submit" class="btn btn-info">Submit</button>
<a href="/<%= product._id %>">Back</a>
</form>
</div>

