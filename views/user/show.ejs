<%- include("../partials/header.ejs") %>

  <div class="container">
    <dic class="main">
      <div class="topbar"></div>
      <div class="row">
        <div class="col-md-4 mt-1">
          <div class="card text-center sidebar">
            <div class="card-body">
              <img src="<%= user.profileImage %>" class="rounded-circle" id="image-user" width="200">
              <div class="mt-3">
                <h3 id="username"><%= user.username %></h3>
                <a href="/">Home</a>
                <a href="">Order</a>
                <a href="">Edit</a>
                <a href="/logout">Log out</a>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-8 mt-1">
          <div class="card mb-3 content">
            <h1 class="m-3 pt-3">About</h1>
            <div class="card-body">
              <div class="row">
                <div class="col-md-3">
                  <h5>Full Name</h5>
                </div>
                <div class="col-md-9 text-secondart">
                  <%= user.firstName + ' ' + user.lastName %>
                </div>
              </div><hr>
              <div class="row">
                <div class="col-md-3">
                  <h5>Email</h5>
                </div>
                <div class="col-md-9 text-secondart">
                  <a href="mailto: <%= user.email %>"><%= user.email %></a>
                </div>
              </div><hr>
              <div class="row">
                <div class="col-md-3">
                  <h5>Address</h5>
                </div>
                <div class="col-md-9 text-secondart">
                  <%= user.address %>, <%= user.postalCode %>, <%= user.city %>
                </div>
              </div><hr>
            </div>
          </div>
          <div class="card mb-3 content">
            <h1 class="m-3">Order</h1>
            <div class="card-body">
              <div class="row">
                <div class="col-md-3">
                  <h5>My Order</h5>
                </div>
                <div class="col-md-9 text-secondary">
                  Order other...
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </dic>
  </div>


<%- include("../partials/footer.ejs") %>

